<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.capstone.solemate.solemate.FeedbackActivity">

    <!-- BASE IMAGE -->
    <ImageView
        android:id="@+id/footBase"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/foot_mri_right" >
    </ImageView>

    <!-- START MODERATE MARKERS -->
    <!-- MODERATE - TOE -->
    <ImageView
        android:id="@+id/toeModerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_moderate_toe"
        android:layout_marginRight="125dp"
        android:layout_marginEnd="105dp"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginTop="20dp">
    </ImageView>
    <!-- MODERATE - RIGHT BRIDGE -->
    <ImageView
        android:id="@+id/rightBridgeModerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_moderate_rightbridge"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp">
    </ImageView>
    <!-- MODERATE - LEFT SIDE -->
    <ImageView
        android:id="@+id/leftSideModerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_moderate_left"
        android:layout_below="@+id/rightBridgeModerate"
        android:layout_toLeftOf="@+id/toeModerate"
        android:layout_toStartOf="@+id/toeModerate"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="-5dp">
    </ImageView>
    <!-- MODERATE - HEEL -->
    <ImageView
        android:id="@+id/heelModerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_glow_moderate"
        android:layout_alignBottom="@+id/footBase"
        android:layout_alignRight="@+id/toeModerate"
        android:layout_alignEnd="@+id/toeModerate"
        android:layout_marginBottom="10dp">
    </ImageView>
    <!-- END MODERATE MARKERS -->

    <!-- START HEAVY MARKERS -->
    <!-- HEAVY - TOE -->
    <ImageView
        android:id="@+id/toeHeavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_heavy_toe"
        android:layout_marginRight="125dp"
        android:layout_marginEnd="105dp"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginTop="20dp">
    </ImageView>
    <!-- HEAVY - RIGHT BRIDGE -->
    <ImageView
        android:id="@+id/rightBridgeHeavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_heavy_rightbridge"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp">
    </ImageView>
    <!-- HEAVY - LEFT SIDE -->
    <ImageView
        android:id="@+id/leftSideHeavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_heavy_left"
        android:layout_below="@+id/rightBridgeHeavy"
        android:layout_toLeftOf="@+id/toeHeavy"
        android:layout_toStartOf="@+id/toeHeavy"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="-5dp">
    </ImageView>
    <!-- HEAVY - HEEL -->
    <ImageView
        android:id="@+id/heelHeavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_glow_heavy"
        android:layout_alignBottom="@+id/footBase"
        android:layout_alignRight="@+id/toeHeavy"
        android:layout_alignEnd="@+id/toeHeavy"
        android:layout_marginBottom="10dp">
    </ImageView>
    <!-- END Heavy MARKERS -->

    <!-- START LIGHT MARKERS -->
    <!-- LIGHT - TOE -->
    <ImageView
        android:id="@+id/toeLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_light_toe"
        android:layout_marginRight="125dp"
        android:layout_marginEnd="105dp"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginTop="20dp">
    </ImageView>
    <!-- LIGHT - RIGHT BRIDGE -->
    <ImageView
        android:id="@+id/rightBridgeLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_light_rightbridge"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp">
    </ImageView>
    <!-- LIGHT - LEFT SIDE -->
    <ImageView
        android:id="@+id/leftSideLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_light_left"
        android:layout_below="@+id/rightBridgeLight"
        android:layout_toLeftOf="@+id/toeLight"
        android:layout_toStartOf="@+id/toeLight"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="-5dp">
    </ImageView>
    <!-- LIGHT - HEEL -->
    <ImageView
        android:id="@+id/heelLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_glow_light"
        android:layout_alignBottom="@+id/footBase"
        android:layout_alignRight="@+id/toeLight"
        android:layout_alignEnd="@+id/toeLight"
        android:layout_marginBottom="10dp">
    </ImageView>
    <!-- END LIGHT MARKERS -->


    <TextView
        android:id="@+id/helloworld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" />

</RelativeLayout>
