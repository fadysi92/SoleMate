<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.capstone.solemate.solemate.FeedbackActivity">

    <!-- BASE IMAGE -->
    <ImageView
        android:id="@+id/footBase"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/foot_mri_right" >
    </ImageView>

    <!-- START BLUE MARKERS -->
    <!-- BLUE - TOE -->
    <ImageView
        android:id="@+id/toeBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_blue_toe"
        android:layout_marginRight="125dp"
        android:layout_marginEnd="105dp"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginTop="20dp">
    </ImageView>
    <!-- BLUE - RIGHT BRIDGE -->
    <ImageView
        android:id="@+id/rightBridgeBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_blue_rightbridge"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp">
    </ImageView>
    <!-- BLUE - LEFT SIDE -->
    <ImageView
        android:id="@+id/leftSideBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_blue_left"
        android:layout_below="@+id/rightBridgeBlue"
        android:layout_toLeftOf="@+id/toeBlue"
        android:layout_toStartOf="@+id/toeBlue"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="-5dp">
    </ImageView>
    <!-- BLUE - HEEL -->
    <ImageView
        android:id="@+id/heelBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_glow_blue"
        android:layout_alignBottom="@+id/footBase"
        android:layout_alignRight="@+id/toeBlue"
        android:layout_alignEnd="@+id/toeBlue"
        android:layout_marginBottom="10dp">
    </ImageView>
    <!-- END BLUE MARKERS -->

    <!-- START RED MARKERS -->
    <!-- RED - TOE -->
    <ImageView
        android:id="@+id/toeRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_red_toe"
        android:layout_marginRight="125dp"
        android:layout_marginEnd="105dp"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginTop="20dp">
    </ImageView>
    <!-- RED - RIGHT BRIDGE -->
    <ImageView
        android:id="@+id/rightBridgeRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_red_rightbridge"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp">
    </ImageView>
    <!-- RED - LEFT SIDE -->
    <ImageView
        android:id="@+id/leftSideRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_red_left"
        android:layout_below="@+id/rightBridgeRed"
        android:layout_toLeftOf="@+id/toeRed"
        android:layout_toStartOf="@+id/toeRed"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="-5dp">
    </ImageView>
    <!-- RED - HEEL -->
    <ImageView
        android:id="@+id/heelRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_glow_red"
        android:layout_alignBottom="@+id/footBase"
        android:layout_alignRight="@+id/toeRed"
        android:layout_alignEnd="@+id/toeRed"
        android:layout_marginBottom="10dp">
    </ImageView>
    <!-- END RED MARKERS -->

    <!-- START YELLOW MARKERS -->
    <!-- YELLOW - TOE -->
    <ImageView
        android:id="@+id/toeYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_yellow_toe"
        android:layout_marginRight="125dp"
        android:layout_marginEnd="105dp"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginTop="20dp">
    </ImageView>
    <!-- YELLOW - RIGHT BRIDGE -->
    <ImageView
        android:id="@+id/rightBridgeYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_yellow_rightbridge"
        android:layout_alignTop="@+id/footBase"
        android:layout_alignRight="@+id/footBase"
        android:layout_alignEnd="@+id/footBase"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp">
    </ImageView>
    <!-- YELLOW - LEFT SIDE -->
    <ImageView
        android:id="@+id/leftSideYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_glow_yellow_left"
        android:layout_below="@+id/rightBridgeYellow"
        android:layout_toLeftOf="@+id/toeYellow"
        android:layout_toStartOf="@+id/toeYellow"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="-5dp">
    </ImageView>
    <!-- YELLOW - HEEL -->
    <ImageView
        android:id="@+id/heelYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_glow_yellow"
        android:layout_alignBottom="@+id/footBase"
        android:layout_alignRight="@+id/toeYellow"
        android:layout_alignEnd="@+id/toeYellow"
        android:layout_marginBottom="10dp">
    </ImageView>
    <!-- END YELLOW MARKERS -->


    <TextView
        android:id="@+id/helloworld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" />

</RelativeLayout>
